
FROM debian:bullseye-slim

# Install necessary libraries
RUN apt-get update && apt-get install -y \
    libx11-6 \
    libpulse0 \
    libnss3 \
    libxkbfile1 \
    libglu1-mesa \
    libqt5widgets5 \
    libqt5core5a \
    libc6

# Install Android SDK (replace with your preferred setup)
COPY android-sdk /opt/android-sdk

# Set environment variables for Android SDK
ENV ANDROID_HOME=/opt/android-sdk
ENV PATH=$ANDROID_HOME/emulator:$ANDROID_HOME/tools:$ANDROID_HOME/platform-tools:$PATH

# Expose necessary ports if needed
EXPOSE 5554 5555

CMD ["emulator", "-avd", "Pixel_6_Android_12"]
